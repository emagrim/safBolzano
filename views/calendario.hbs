<head>
    <title>{{ pageTitle }}</title>
    {{{output.std}}}
    <style id="globalStyles"></style>
    {{{output.style}}}
    {{{output.font}}}
    {{{output.fontawesome}}}
    <style>
        /*   table   */
        table {
            border-collapse: collapse;
        }

        tbody tr:nth-child(odd) {
            background-color: #f0f0f0;
            /* Light gray background for odd rows */
        }

        tbody tr:nth-child(even) {
            background-color: #ffffff;
            /* White background for even rows */
        }

        tbody tr * {
            padding: 10 px 4px;
        }

        .table_btm tbody td,
        .table_btm tbody th,
        thead td,
        thead th {
            padding: 8px;
            /*border-bottom: 1px solid #d14d4d;*/
            border-right: 1px solid #ddd;
        }

        thead th {
            border-bottom: 1px solid #ddd;
        }

        table th {
            background-color: #f2f2f2;
            /* Light background color for header row */
        }

        .text-holder {
            margin: 5%;
            overflow: scroll;
        }

        .calendarbot {
            display: none;
        }

        form#calendario {
            border: none;
            background-color: white;
        }

        form#calendario table tr {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }

        form#calendario table tr td select {
            width: 100%;
        }

        form#calendario fieldset {
            border: none;
            padding: 20px;
            margin: 0;
            display: flex;
            flex-direction: column;
            gap: 20px;
            background-color: white;
        }

        form#calendario fieldset table tbody tr {
            background-color: white;
        }

        form#calendario input[type=submit] {margin-top: 22px;}

        form#calendario input[type=submit],
        form#calendario input[type=reset] {
            padding: 10px 18px;
            border: 1px solid #ddd;
            background-color: #f2f2f2;
            box-shadow: 3px 3px #f2f2f2;
        }

        form#calendario input[type=submit]:hover,
        form#calendario input[type=reset]:hover {
            box-shadow: none;
            cursor: pointer;
        }
    </style>
</head>

